@model IEnumerable<Entity.Persona>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Menubar.cshtml";
}

<div class="container-fluid" style="position:relative; top:20px; right:-300px;">
    <div class="row">
        <div class="col-md-10">

            <h2>Lista de Persona</h2>

            <p>
                <a href="~/Producto/Create" class="btn btn-primary">Nuevo Producto</a>
            </p>
            <table id="listar" class="table">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cedula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.activo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoPersona.NombresTipoPersona)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario.NombresUsuario)
                    </th>
                    <th></th>
                </tr>
                    </thead>
                <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cedula)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.activo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoPersona.NombresTipoPersona)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.NombresUsuario)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Persona", new { id=item.IdPersona }) " class="btn btn-danger">Editar</a>
                            <a href="@Url.Action("Details", "Persona", new { id=item.IdPersona}) " class="btn btn-primary">Detalles</a>
                            <a href="@Url.Action("Delete", "Persona", new  {id=item.IdPersona }) " disabled class="btn btn-warning">Eliminar</a>
                        </td>
                    </tr>
                }

            </table>
            </div>
</div>
</div>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
@Scripts.Render("~/bundles/datatables")
@section scripts{
<script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#listar').DataTable({
                "paging": true,
                "recordsFiltered": 10,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
</script>
    
    }